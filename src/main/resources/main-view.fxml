<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane maxHeight="Infinity" maxWidth="Infinity" minHeight="0.0" minWidth="0.0" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.novelreviewer.ui.MainController">
    <center>
        <VBox BorderPane.alignment="CENTER">
            <children>
            <TextField fx:id="titleInput" alignment="CENTER" maxHeight="150.0" maxWidth="150.0" promptText="Title" />
                <TextField fx:id="authorInput" alignment="CENTER" maxHeight="150.0" maxWidth="150.0" promptText="Author" />
            <TextField fx:id="chapterInput" alignment="CENTER" maxHeight="150.0" maxWidth="150.0" promptText="Chapters" />
            <TextField fx:id="ratingInput" alignment="CENTER" maxHeight="150.0" maxWidth="150.0" promptText="Rating" />
            <Button fx:id="novelAddButton" mnemonicParsing="false" onAction="#handleAddNovel" text="Add" />
            <Button fx:id="saveButton" mnemonicParsing="false" onAction="#saveLibrary" text="Save" />
            <Button fx:id="loadButton" mnemonicParsing="false" onAction="#loadLibrary" text="Load" />
            </children>
            <BorderPane.margin>
                <Insets />
            </BorderPane.margin>
        </VBox>
    </center>
</BorderPane>
